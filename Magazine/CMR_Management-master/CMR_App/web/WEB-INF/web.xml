<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>DB_URL</param-name>
        <param-value>jdbc:sqlserver://localhost:1433;databaseName=MagazineCMS</param-value>
    </context-param>
    <context-param>
        <param-name>DB_USER</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>DB_PASS</param-name>
        <param-value>sa</param-value>
    </context-param>
    <servlet>
        <servlet-name>CMR_UsersServlet</servlet-name>
        <servlet-class>cmr.servlet.CMR_UsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignCourseServlet</servlet-name>
        <servlet-class>cmr.servlet.AssignCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticlesServlet</servlet-name>
        <servlet-class>cmr.servlet.ArticlesServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>FacultyServlet</servlet-name>
        <servlet-class>cmr.servlet.FacultyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowArticlesServlet</servlet-name>
        <servlet-class>cmr.servlet.ShowArticlesServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ProcessServlet</servlet-name>
        <servlet-class>cmr.servlet.ProcessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CMR_UsersServlet</servlet-name>
        <url-pattern>/cmr_users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticlesServlet</servlet-name>
        <url-pattern>/Articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyServlet</servlet-name>
        <url-pattern>/FacultyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowArticlesServlet</servlet-name>
        <url-pattern>/ShowArticles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessServlet</servlet-name>
        <url-pattern>/Process</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
